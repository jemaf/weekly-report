<h1><%= t("users.new.title") %></h1>

<p><%= t("users.new.description") %></p>

   <% if flash[:notice] %>
    <div class="alert alert-success">
      <p><%= flash[:notice] %></p>
    </div>
    <% end %>
    <% if flash[:error] %>
    <div class="alert alert-error">
      <% if @user.errors.any? %>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
    </div>
    <% end %>

<%= simple_form_for @user, :url => new_user_path do |f| %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.submit%>
<% end %>
